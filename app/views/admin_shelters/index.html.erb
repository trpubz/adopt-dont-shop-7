<h1>All Shelters</h1>

<% @shelters.reverse_ordered.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= shelter.name %></h3>
    <p>Created at: <%= shelter.created_at %></p>
  </div>
<% end %>

<h3>Shelters with Pending Applications</h3>
<section id="shelters_pending_applications">
  <% @shelters.pending_applications.each do |shelter| %>
      <p><%= shelter.name %></p>
  <% end %>
</section>