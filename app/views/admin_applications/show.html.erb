<h2>Application Details</h2>

<p>Application Status: <%= @app.status %></p>
<p>Name: <%= @app.name %></p>
<p>Address: <%= @app.full_address %></p>
<p>Description: <%= @app.description %></p>
<h4>Pets</h4>
<% @app.pets.each do | pet | %>
    <section id="pet-<%= pet.id %>">
      <span><%= pet.name %></span>
      <% if pet.name.include?("Approved") %>
        <span>| Approved âœ…</span>
      <% elsif pet.name.include?("Rejected") %>
        <span>| Application has been Rejected</span>
      <% else %>
          <%= form_with url: "/pets/#{pet.id}?approve=true&app_id=#{@app.id}&name=#{pet.name}Approved",
                        method: :patch,
                        data: {turbo: false},
                        html: {style: "display: inline-block"} do |form| %>
            <% form.submit "Approve"  %>
          <% end %>
          <%= button_to "Reject Application", "/pets/#{pet.id}?approve=false&app_id=#{@app.id}&name=#{pet.name}Rejected", method: :patch, data: { turbo: false } %>
      <% end %>
    </section>
<% end %>
